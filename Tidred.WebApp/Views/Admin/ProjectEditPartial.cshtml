<div ng-controller="projectEditController">
    <h2>PROJECTS</h2>

    <form name="projectForm" ng-submit="save(projectForm)">
        <fieldset>
            <legend>Edit</legend>
            <div class="form-group">
                <label>Name</label>
                <input name="nameText" type="text" class="form-control" ng-model="project.name" required />
            </div>
            <div class="form-group">
                <label>Customer</label>
                <select name="customerSelect" class="form-control" ng-model="project.customerId" required
                        ng-options="customer.customerId as customer.name for customer in customers"></select>
            </div>
            <div class="form-group">
                <label>Fixed Price</label>
                <input name="fixedText" type="text" class="form-control" ng-model="project.fixedPrice" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" />
                <input type="button" class="btn btn-default" ng-click="cancel()" value="Cancel" />
            </div>
            <span ng-show="projectForm.nameText.$error.required">Enter name.</span>
            <span ng-show="projectForm.customerSelect.$error.required">Select customer.</span>
        </fieldset>
    </form>
</div>
