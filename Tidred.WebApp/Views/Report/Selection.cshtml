@model Tidred.WebApp.Models.ReportModel
@{
    var reportTypes = new SelectList(Enum.GetValues(typeof(Tidred.WebApp.Models.ReportType)), Model.ReportType);
}
<fieldset>
    <legend>Urval</legend>
    <table>
        <tr>
            <td>
                @Html.Label("Rapport")
                @Html.DropDownListFor(model => model.ReportType, @reportTypes, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReportType)
            </td>
            <td>
                @Html.Label("Kund")
                @Html.DropDownListFor(model => model.CustomerId, Model.Customers, "(Ingen)", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerId)
            </td>
            <td>
                @Html.Label("Projekt")
                @Html.DropDownListFor(model => model.ProjectId, Model.Projects, "(Inget)", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectId)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Datum från")
                @Html.TextBoxFor(model => model.StartDate, new { @class = "datepicker form-control" })
                @Html.ValidationMessageFor(model => model.StartDate)
            </td>
            <td>
                @Html.Label("Datum till")
                @Html.TextBoxFor(model => model.EndDate, new { @class = "datepicker form-control" })
                @Html.ValidationMessageFor(model => model.EndDate)
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit" class="btn btn-default">Visa</button>
            </td>
        </tr>
    </table>
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.CoId)
    
</fieldset>